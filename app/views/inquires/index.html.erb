  <body>
 <div class="wrapper fadeInDown">
        <div id="formContent">
          <!-- Titles -->
          <h2> From Inquires </h2>
           <%= form_with url: send_text_path, method: :post do |form| %>
                <%= form.label :name_user, "Your name:",class:'title_user' %> <br>
                <%= form.text_field :name_user,class:'user' %>
                <%= form.label :tel, "Telephone number:",class:'title_user' %>
                <%= form.text_field :tel,class:'user' %>
                <%= form.label :message, "Message:",class:'title_user' %><br>
                <%= form.text_area :message, size: "40x5" ,class:'user'%>
                <%= form.submit "submit",class: 'submit2',:value => "send to email" %>
             <a href="/home"><h4><-- Back</h4></a>
            <% end %>     
</div>
     
        </div>
